#!/usr/bin/env bash
#
# Hide dotfiles in Finder
#
# Copyright 2021-2025, Joe Block <jpb@unixorn.net>
# License: Apache 2

set -o pipefail
source tumult-functions


if [[ -n "$DEBUG" ]]; then
  set -x
fi

only-run-on Darwin

defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder
exit $?
