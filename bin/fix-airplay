#!/usr/bin/env bash
#
# Airplay sometimes craps out, add helper to kick it
#
# Copyright 2016-2025, Joe Block <jpb@unixorn.net>

set -o pipefail
source tumult-functions



}



if [[ "$(whoami)" != 'root' ]]; then
  fail 'This script must be run by root or with sudo'
fi

only-run-on darwin

# shellcheck disable=SC2009
exec kill "$(ps -ax | grep '/usr/sbin/coreaudiod' | awk '{print $1}')"
