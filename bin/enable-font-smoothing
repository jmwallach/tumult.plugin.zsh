#!/usr/bin/env bash
#
# Enable Font Smoothing
#
# Font smoothing has been disabled by default since 10.14
#
# bin/enable-font-smoothing script skeleton
#
# Copyright 2025, Joe Block <jpb@unixorn.net>

set -o pipefail
source tumult-functions

if [[ -n "$DEBUG" ]]; then
  # shellcheck disable=SC2086
  if [[ "$(echo $DEBUG | tr '[:upper:]' '[:lower:]')" == "verbose" ]]; then
    set -x
  fi
fi



}





only-run-on Darwin
check-dependencies defaults

exec defaults write -g CGFontRenderingFontSmoothingDisabled -bool false
