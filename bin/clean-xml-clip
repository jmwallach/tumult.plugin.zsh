#!/usr/bin/env bash
#
# Clean up the XML in the clipboard
#
# Copyright 2017-2025, Joe Block <jpb@unixorn.net>
#
# License: Apache 2.0

set -o pipefail
source tumult-functions


only-run-on darwin
check-dependency pbcopy
check-dependency pbpaste
check-dependency tidy

pbpaste | tidy -xml -wrap 0 | pbcopy
exit $?
