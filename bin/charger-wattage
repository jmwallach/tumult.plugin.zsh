#!/usr/bin/env bash
#
# Show the wattage of your charger
#
# Copyright 2021-2025, Joe Block <jpb@unixorn.net>
#
# License: Apache 2.0

set -o pipefail
source tumult-functions

if [[ -n "$DEBUG" ]]; then
  set -x
fi


}


function charger-wattage() {
  pmset -g ac | awk '/Wattage/ {print $3}'
}



only-run-on Darwin
check-dependency pmset

charger-wattage
