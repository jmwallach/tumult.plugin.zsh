#!/usr/bin/env bash
#
# Show the user logged into the macOS console
#
# Copyright 2021, Joe Block <jpb@unixorn.net>
#
# License: Apache 2

set -o pipefail
source tumult-functions

if [[ -n "$DEBUG" ]]; then
  set -x
fi


consoleUser() {
	echo "show State:/Users/ConsoleUser" | scutil | awk '/Name :/ && ! /loginwindow/ { print $3 }'
}

only-run-on Darwin

consoleUser
