#!/usr/bin/env bash
#
# Start the FTP Server on macOS and configure it to restart every boot
#
# Copyright 2016-2025, Joe Block <jpb@ApesSeekingKnowledge.net>

set -o pipefail
source tumult-functions



}



only-run-on darwin
check-dependency launchctl

exec sudo -s launchctl load -w /System/Library/LaunchDaemons/ftp.plist
