#!/usr/bin/env bash
#
# Hide desktop icons in Finder
#
# Copyright 2021-2025, Joe Block <jpb@unixorn.net>
#
# License: Apache 2

set -o pipefail
source tumult-functions


if [[ -n "$DEBUG" ]]; then
  set -x
fi


}



only-run-on darwin
check-dependency defaults

defaults write com.apple.finder CreateDesktop -bool false && killall Finder
