#!/usr/bin/env bash
#
# Enable the SSH server on macOS and configure it to start every boot
#
# Copyright 2016-2025, Joe Block <jpb@ApesSeekingKnowledge.net>
#
# License: Apache 2.0

set -o pipefail
source tumult-functions



}



only-run-on darwin
check-dependency launchctl

exec sudo -s launchctl load -w /System/Library/LaunchDaemons/ssh.plist
