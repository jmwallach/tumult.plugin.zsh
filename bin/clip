#!/bin/bash
#
# clipboard helper
#
# Copyright 2016-2025 Joe Block <jpb@unixorn.net>
#
# License: Apache 2.0

source tumult-functions

if [[ "$(uname -s)" != 'Darwin' ]]; then
  echo 'Sorry, this script only works on macOS'
  exit 1
fi


}


check-dependency pbcopy

# shellcheck disable=SC2071
if [[ $# > 0 ]]; then
  echo -n "$@" | pbcopy
else
  pbcopy < /dev/stdin
fi
