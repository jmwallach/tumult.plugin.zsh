#!/usr/bin/env bash
#
# Enable writing .DS_Store to network shares
#
# Copyright 2020-2025, Joe Block <jpb@unixorn.net>
#
# License: Apache 2.0

source tumult-functions


only-run-on darwin
check-dependency defaults

exec defaults write com.apple.desktopservices DSDontWriteNetworkStores -bool FALSE
